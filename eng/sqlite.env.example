# SQLite provider environment template
# Copy to .env or export variables in your shell before running apps locally.

# Absolute or relative path to the shared InquirySpark database file
INQUIRYSPARK_DB_PATH=./data/sqlite/InquirySpark.db

# Connection string consumed by WebApi/Web/Repository
INQUIRYSPARK_CONNECTION_STRING=Data Source=./data/sqlite/InquirySpark.db;Mode=ReadOnly;Cache=Shared

# Identity database path for the Admin area
INQUIRYSPARK_IDENTITY_DB_PATH=./data/sqlite/ControlSparkUser.db

# Connection string consumed by Admin Identity context
INQUIRYSPARK_IDENTITY_CONNECTION_STRING=Data Source=./data/sqlite/ControlSparkUser.db;Mode=ReadOnly;Cache=Shared

# Provider metadata used by PersistenceProviderConfig
INQUIRYSPARK_PROVIDER_NAME=Sqlite
INQUIRYSPARK_PROVIDER_READONLY=true
INQUIRYSPARK_COMMAND_TIMEOUT=30
