@model IEnumerable<InquirySpark.Repository.Database.Question>

@{
    ViewData["Title"] = "Questions";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-question-circle me-2"></i>
            Questions
        </h5>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle me-1"></i>
            Create New
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="bi bi-card-text me-1"></i>
                            @Html.DisplayNameFor(model => model.QuestionShortNm)
                        </th>
                        <th>
                            <i class="bi bi-tag me-1"></i>
                            @Html.DisplayNameFor(model => model.QuestionNm)
                        </th>
                        <th>
                            <i class="bi bi-controller me-1"></i>
                            @Html.DisplayNameFor(model => model.QuestionType)
                        </th>
                        <th>
                            <i class="bi bi-app-indicator me-1"></i>
                            @Html.DisplayNameFor(model => model.SurveyType)
                        </th>
                        <th class="text-center">
                            <i class="bi bi-sort-numeric-down me-1"></i>
                            @Html.DisplayNameFor(model => model.QuestionSort)
                        </th>
                        <th class="text-center">
                            <i class="bi bi-person me-1"></i>
                            @Html.DisplayNameFor(model => model.ModifiedId)
                        </th>
                        <th class="text-center">
                            <i class="bi bi-calendar-event me-1"></i>
                            @Html.DisplayNameFor(model => model.ModifiedDt)
                        </th>
                        <th class="text-center no-sort" style="width: 180px;">
                            <i class="bi bi-gear me-1"></i>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuestionShortNm)
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.QuestionNm)</strong>
                        </td>
                        <td>
                            <span class="badge bg-info">@Html.DisplayFor(modelItem => item.QuestionType.AnswerDataType)</span>
                        </td>
                        <td>
                            <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.SurveyType.SurveyTypeNm)</span>
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.QuestionSort)
                        </td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.ModifiedId)</span>
                        </td>
                        <td class="text-center">
                            <small class="text-muted">@Html.DisplayFor(modelItem => item.ModifiedDt)</small>
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@item.QuestionId" 
                                   class="btn btn-outline-info" 
                                   title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.QuestionId" 
                                   class="btn btn-outline-primary" 
                                   title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.QuestionId" 
                                   class="btn btn-outline-danger" 
                                   title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
}
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
        <small>
            <i class="bi bi-info-circle me-1"></i>
            Total Records: <strong>@Model.Count()</strong>
        </small>
        <small>
            <i class="bi bi-lightning-charge me-1"></i>
            Powered by DataTables
        </small>
    </div>
</div>
