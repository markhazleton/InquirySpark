@model IEnumerable<InquirySpark.Repository.Models.Charting.ChartDefinitionDto>
@{
    ViewData["Title"] = "Chart Builder Library";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0"><i class="bi bi-bar-chart-fill"></i> Chart Builder Library</h2>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i> Create New Chart
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-hash"></i> ID</th>
                        <th><i class="bi bi-file-text"></i> Name</th>
                        <th><i class="bi bi-tags"></i> Tags</th>
                        <th><i class="bi bi-calendar3"></i> Modified</th>
                        <th><i class="bi bi-arrow-repeat"></i> Version</th>
                        <th><i class="bi bi-check-circle"></i> Status</th>
                        <th class="no-sort">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ChartDefinitionId</td>
                            <td>
                                <strong>@item.Name</strong>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <br /><small class="text-muted">@item.Description</small>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Tags))
                                {
                                    foreach (var tag in item.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge bg-secondary me-1">@tag.Trim()</span>
                                    }
                                }
                            </td>
                            <td>
                                <small>@item.ModifiedDt.ToString("yyyy-MM-dd HH:mm")</small>
                            </td>
                            <td>
                                <span class="badge bg-info">v@item.VersionNumber</span>
                            </td>
                            <td>
                                @if (item.AutoApprovedFl)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning"><i class="bi bi-clock"></i> Draft</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.ChartDefinitionId" class="btn btn-outline-info" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ChartDefinitionId" class="btn btn-outline-primary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="History" asp-route-id="@item.ChartDefinitionId" class="btn btn-outline-secondary" title="Version History">
                                        <i class="bi bi-clock-history"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ChartDefinitionId" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
        <span><i class="bi bi-info-circle"></i> Total: @Model.Count() chart definitions</span>
        <span><i class="bi bi-lightning"></i> DataTables enabled</span>
    </div>
</div>
