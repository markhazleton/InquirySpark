@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "User Role Management";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0"><i class="bi bi-people"></i> User Role Management</h2>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th><i class="bi bi-envelope"></i> Email</th>
                        <th><i class="bi bi-person"></i> Username</th>
                        <th><i class="bi bi-shield-check"></i> Roles</th>
                        <th><i class="bi bi-check-circle"></i> Confirmed</th>
                        <th class="no-sort">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.UserName</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-info text-dark me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted"><i class="bi bi-dash-circle"></i> No roles assigned</span>
                                }
                            </td>
                            <td>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-triangle"></i> No</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Manage" asp-route-userId="@user.UserId" 
                                   class="btn btn-sm btn-outline-primary" title="Manage Roles">
                                    <i class="bi bi-gear"></i> Manage Roles
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
        <span><i class="bi bi-info-circle"></i> Total: @Model.Count users</span>
        <span><i class="bi bi-lightning"></i> DataTables enabled</span>
    </div>
</div>
