{
  "name": "inquiryspark-admin",
  "version": "1.0.0",
  "description": "InquirySpark Admin client-side dependencies",
  "private": true,
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run copy:jquery && npm run copy:bootstrap && npm run copy:datatables && npm run copy:bootstrap-icons && npm run copy:validation",
    "clean": "node -e \"const fs=require('fs');const path=require('path');const dir='wwwroot/lib';if(fs.existsSync(dir)){fs.rmSync(dir,{recursive:true,force:true});console.log('Cleaned wwwroot/lib');}\"",
    "copy:jquery": "node scripts/copy-assets.js jquery",
    "copy:bootstrap": "node scripts/copy-assets.js bootstrap",
    "copy:datatables": "node scripts/copy-assets.js datatables",
    "copy:bootstrap-icons": "node scripts/copy-assets.js bootstrap-icons",
    "copy:validation": "node scripts/copy-assets.js validation",
    "postinstall": "npm run build",
    "update-check": "npm outdated"
  },
  "dependencies": {
    "jquery": "^3.7.1",
    "bootstrap": "^5.3.8",
    "datatables.net": "^2.3.5",
    "datatables.net-bs5": "^2.3.5",
    "datatables.net-buttons": "^3.2.5",
    "datatables.net-buttons-bs5": "^3.2.5",
    "datatables.net-responsive": "^3.0.7",
    "datatables.net-responsive-bs5": "^3.0.7",
    "datatables.net-searchpanes": "^2.3.5",
    "datatables.net-searchpanes-bs5": "^2.3.5",
    "datatables.net-select": "^3.1.3",
    "datatables.net-select-bs5": "^3.1.3",
    "bootstrap-icons": "^1.13.1",
    "jquery-validation": "^1.21.0",
    "jquery-validation-unobtrusive": "^4.0.0",
    "jszip": "^3.10.1",
    "pdfmake": "^0.2.20"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
