{
  "name": "inquiryspark-admin",
  "version": "1.0.0",
  "description": "InquirySpark Admin client-side dependencies",
  "private": true,
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "webpack --config build/webpack.dev.js",
    "build:prod": "webpack --config build/webpack.prod.js",
    "watch": "webpack --watch --config build/webpack.dev.js",
    "clean": "node -e \"const fs=require('fs');const path=require('path');['wwwroot/js/site.js','wwwroot/js/site.min.js','wwwroot/js/vendor.js','wwwroot/js/vendor.min.js','wwwroot/css/site.css','wwwroot/css/site.min.css'].forEach(f=>{if(fs.existsSync(f))fs.unlinkSync(f)})\"",
    "legacy:build": "npm run legacy:copy:jquery && npm run legacy:copy:bootstrap && npm run legacy:copy:bootstrap-css && npm run legacy:copy:datatables && npm run legacy:copy:bootstrap-icons && npm run legacy:copy:validation",
    "legacy:copy:jquery": "node scripts/copy-assets.js jquery",
    "legacy:copy:bootstrap": "node scripts/copy-assets.js bootstrap",
    "legacy:copy:bootstrap-css": "node scripts/copy-assets.js bootstrap-css",
    "legacy:copy:datatables": "node scripts/copy-assets.js datatables",
    "legacy:copy:bootstrap-icons": "node scripts/copy-assets.js bootstrap-icons",
    "legacy:copy:validation": "node scripts/copy-assets.js validation",
    "postinstall": "npm run build",
    "update-check": "npm outdated"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "datatables.net": "^2.3.5",
    "datatables.net-bs5": "^2.3.5",
    "datatables.net-buttons": "^3.2.5",
    "datatables.net-buttons-bs5": "^3.2.5",
    "datatables.net-responsive": "^3.0.7",
    "datatables.net-responsive-bs5": "^3.0.7",
    "datatables.net-searchpanes": "^2.3.5",
    "datatables.net-searchpanes-bs5": "^2.3.5",
    "datatables.net-select": "^3.1.3",
    "datatables.net-select-bs5": "^3.1.3",
    "jquery": "^3.7.1",
    "jquery-validation": "^1.21.0",
    "jquery-validation-unobtrusive": "^4.0.0",
    "jszip": "^3.10.1",
    "pdfmake": "^0.2.20"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.3",
    "mini-css-extract-plugin": "^2.9.4",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.15",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
