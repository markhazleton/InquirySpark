{
  "ConnectionStrings": {
    "ControlSparkUserContextConnection": "Data Source=../../data/sqlite/ControlSparkUser.db;Mode=ReadOnly",
    "InquirySparkConnection": "Data Source=../../data/sqlite/InquirySpark.db;Mode=ReadOnly"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "InquirySpark.Repository.Services.Charting": "Information",
      "InquirySpark.Repository.Jobs": "Information",
      "InquirySpark.Admin.Controllers": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "UseUtcTimestamp": true
      }
    }
  },
  "AllowedHosts": "*",
  "BootswatchOptions": {
    "DefaultTheme": "yeti",
    "EnableCaching": true,
    "CacheDurationMinutes": 60
  },
  "Charting": {
    "Storage": {
      "ConnectionString": "",
      "ContainerName": "charts"
    },
    "Search": {
      "ServiceName": "",
      "ApiKey": ""
    },
    "ServiceBus": {
      "ConnectionString": ""
    },
    "BatchRendering": {
      "MaxConcurrentJobs": 4
    },
    "PerformanceTargets": {
      "ChartPreviewTimeoutSeconds": 30,
      "DataExplorerMaxRowsPerPage": 100000,
      "GaugeDashboardRefreshIntervalSeconds": 300,
      "DashboardNavigationTargetMs": 1000,
      "MetricQueryTargetMs": 500
    }
  },
  "OpenTelemetry": {
    "Enabled": false,
    "ServiceName": "InquirySpark.Admin",
    "ServiceVersion": "1.0.0",
    "OtlpEndpoint": "",
    "Traces": {
      "ChartBuilder": true,
      "BatchJobs": true,
      "DataExplorer": true,
      "DeckExports": true,
      "GaugeDashboards": true
    },
    "Metrics": {
      "ChartBuilderCompletion": true,
      "ChartReuseRatios": true,
      "DashboardSatisfaction": true,
      "PerformanceCounters": true
    }
  }
}